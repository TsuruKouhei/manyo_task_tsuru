<h1><%= t("tasks.title.new")%></h1>
<% if @task.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @task, local: true do |form| %>
  
    <div class="form-group">
      <%= form.label :title, t("activerecord.attributes.task.title") %><br>
      <%= form.text_field :title, class: 'form-control' %><br>
    </div>
    <div class="form-group">
      <%= form.label :content, t("activerecord.attributes.task.content") %><br>
      <%= form.text_area :content, class: 'form-control' %><br>
    </div>
    <div class="form-group">
      <%= form.label :deadline_on, "終了期限" %><br>
      <%= form.date_field :deadline_on, class: 'form-control' %><br>
    </div>
    <div class="form-group">
      <%= form.label :priority, "優先度" %><br>
      <%= form.select :priority, Task.priorities.keys.map { |k| [k, k] }, include_blank: true, class: 'form-control' %><br>
    </div>
    <div class="form-group">
      <%= form.label :status, "ステータス" %><br>
      <%= form.select :status, Task.statuses.keys.map { |k| [k, k] }, include_blank: true, class: 'form-control' %><br>
    </div>
    <div class="form-group labels">
      <div class="labels">
        <%= form.label :label_ids, "ラベル" %><br>
        <% current_user.labels.each do |label| %>
          <div class="form-check">
            <%= form.check_box :label_ids, { multiple: true, include_hidden: false, class: 'form-check-input' }, label.id, false %>
            <%= label.name %><br>
          </div>
        <% end %>
      </div>
    </div>
    <div class="form-group d-flex justify-content-end">
      <%= form.submit t("helpers.submit.create"), id: "create-task", class: 'btn btn-primary' %><br>
    </div>
    <div class="form-group d-flex justify-content-end">
      <%= link_to t("tasks.link.back"), root_path, id: "back", class: 'btn btn-secondary' %><br>
    </div>
<% end %>