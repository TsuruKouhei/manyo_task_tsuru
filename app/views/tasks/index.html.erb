<h1><%= t('tasks.index')%></h1>
<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.task.title')%></th>
      <th><%= t('activerecord.attributes.task.content')%></th>
      <th><%= t('activerecord.attributes.task.created_at')%></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td>
          <%= link_to t('tasks.show'), task_path(task), id: "show-task" %>
          <%= link_to t('tasks.edit'), edit_task_path(task), id: "edit-task" %>
          <%= link_to t('tasks.destroy'), task_path(task), method: :delete, data: { confirm: '本当に削除しますか？' }, id: "destroy-task" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
