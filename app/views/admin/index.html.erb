<h1>ユーザ一覧</h1>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>管理者権限</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? 'あり' : 'なし' %></td>
        <td>
          <%= link_to '詳細', [:admin, user] %>
          <%= link_to '編集', edit_admin_user_path(user) %>
          <%= link_to '削除', [:admin, user], method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'ユーザを登録する', new_admin_user_path %>
